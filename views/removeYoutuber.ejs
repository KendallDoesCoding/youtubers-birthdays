<!-- removeYoutuber.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon"
        href="https://th.bing.com/th/id/R.4f7af48557050fcabfd0e876d7b88015?rik=CcmCOoelSn1ePA&riu=http%3a%2f%2fwww.vectorico.com%2fwp-content%2fuploads%2f2018%2f02%2fyoutube-dark-square.png&ehk=BHlDi%2fDWJt9a%2bTIWKpdUNHqBOJtkdwpvUebEYo3vhRo%3d&risl=&pid=ImgRaw&r=0"
        type="image/x-icon">
    <title>YouTubers' Birthdays | Add Youtuber</title>
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <div class="container">
    <form action="/remove" method="POST" class="remove">
        <label for="link">Enter Secret Key</label>
        <input type="text" name="key" id="secret" required>

        <label for="name">Name</label>
        <input type="text" name="name" id="name" placeholder="Enter Channel Name (as it is)" required>


        <button type="submit">Remove YouTuber</button>
    </form>
    </div>
    <!-- Add this section to display the error message -->
    <% if (errorMessage) { %>
        <p class="error-message">
            <%= errorMessage %>
        </p>
        <% } %>
</body>

</html>
